    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
</head>

<body class="index" data-no-turbolink>
  <% flash.each do |name, msg| %>
    <div class="flash alert <%= name %>"><%= msg %></div>
  <% end %>
        
    <div class="wrapper clearfix">
      
      <header id="main" class="full_width">
        <h1 class="logo">
          <a href="/">
            Pledge<span>bench.</span> <small>Donate your time.</small>
          </a>
        </h1>

        <!--MARKUP FOR ALTERNATIVE NAVIGATION STYLE-->
        <ul id="standard" class="clearfix">
          <% if current_user %>
            <li>
              <a href="/listings/new">New listing<i class="icon-th"></i></a>
            </li>
            <li>
              <a href="/logout">Log out<i class="icon-th"></i></a>
            </li>
          <% else %>
            <li>
              <a href="/login">Log in<i class="icon-th"></i></a>
            </li>
            <li>
              <a href="/signup" class="active">Sign up<i class="icon-home"></i></a>
            </li>
          <% end %>
        </ul>
        <!--END ALTERNATE NAVIGATION MARKUP-->
